# Database
DATABASE_URL="postgresql://user:password@localhost:5432/simple_bookkeeping?schema=public"

# API
API_PORT=3001
NODE_ENV=development

# JWT - REQUIRED: Generate secure random strings for production
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHARACTER_STRING
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=CHANGE_ME_TO_DIFFERENT_RANDOM_64_CHARACTER_STRING
JWT_REFRESH_EXPIRES_IN=7d

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Vercel API Token (optional, for deployment status checks)
# Get your token from: https://vercel.com/account/tokens
VERCEL_TOKEN=your-vercel-token-here