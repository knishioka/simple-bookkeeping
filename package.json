{
  "name": "simple-bookkeeping",
  "version": "0.1.0",
  "description": "日本の確定申告（青色申告）に対応した複式簿記システム",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:check-ports": "bash scripts/check-ports.sh",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:web": "turbo run build --filter=@simple-bookkeeping/web",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:strict": "turbo run lint && npx eslint 'apps/**/*.{ts,tsx}' 'packages/**/*.ts' --max-warnings 0",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:docker": "./scripts/test-runner.sh e2e-docker",
    "test:e2e:docker:debug": "./scripts/test-runner.sh e2e-docker --debug",
    "test:e2e:docker:watch": "./scripts/test-runner.sh e2e-docker --headed",
    "test:e2e:docker:build": "docker compose -f docker-compose.test.yml build",
    "test:e2e:docker:clean": "docker compose -f docker-compose.test.yml down -v --remove-orphans",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
    "postinstall": "chmod +x scripts/*.sh 2>/dev/null || true",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:init": "./scripts/init-db.sh",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "env:validate": "tsx scripts/validate-env.ts",
    "env:validate:web": "tsx scripts/validate-env.ts --web",
    "env:validate:strict": "tsx scripts/validate-env.ts --strict",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit fix",
    "audit:high": "pnpm audit --audit-level=high",
    "audit:moderate": "pnpm audit --audit-level=moderate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "vercel:status": "./scripts/vercel-tools.sh status",
    "vercel:logs": "./scripts/vercel-tools.sh logs",
    "vercel:api": "./scripts/vercel-tools.sh api-status",
    "vercel:deployments": "./scripts/vercel-tools.sh deployments",
    "deploy:check": "./scripts/vercel-tools.sh deployments --prod",
    "check:deps": "pnpm audit && pnpm outdated",
    "check:types": "turbo run typecheck",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:check": "pnpm audit --audit-level high && pnpm outdated",
    "security:fix": "pnpm audit fix",
    "check:build": "turbo run build --dry",
    "check:imports": "turbo run lint -- --rule 'import/no-unresolved: error'",
    "check:unused": "depcheck",
    "check:all": "pnpm check:deps && pnpm check:types && pnpm check:imports",
    "precommit:check": "./scripts/build-tools.sh check",
    "prepush:check": "./scripts/build-tools.sh check-full",
    "build:check": "./scripts/build-tools.sh check-full",
    "build:validate": "./scripts/build-tools.sh validate",
    "health": "node scripts/check-service-health.js",
    "health:quick": "echo '🏥 サービス状態チェック' && (curl -s -o /dev/null -w 'Web (3000): %{http_code}\\n' http://localhost:3000 || echo 'Web (3000): ❌')",
    "test:failing": "cd apps/web && REUSE_SERVER=true npx playwright test e2e/accounting-periods.spec.ts:55:174 e2e/audit-logs.spec.ts:81:95:122:145:193 e2e/extended-coverage.spec.ts:68 --project=chromium --reporter=list --timeout=20000",
    "test:accounting": "cd apps/web && REUSE_SERVER=true npx playwright test e2e/accounting-periods.spec.ts --project=chromium --reporter=list",
    "test:audit": "cd apps/web && REUSE_SERVER=true npx playwright test e2e/audit-logs.spec.ts --project=chromium --reporter=list",
    "migrate:users": "tsx scripts/migrate-users-to-supabase.ts",
    "build:benchmark": "bash scripts/benchmark-build.sh",
    "build:clean": "pnpm clean && rm -rf .turbo"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@types/node": "^20.19.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "ws": ">=8.17.1",
      "tar-fs": ">=3.0.9",
      "nanoid": ">=5.0.9",
      "form-data": ">=4.0.4"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=6.0.0"
  },
  "packageManager": "pnpm@10.12.3",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
