{
  "name": "@simple-bookkeeping/supabase-client",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:generate-types": "supabase gen types typescript --project-id=$SUPABASE_PROJECT_ID > src/types/database.types.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "@supabase/ssr": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "supabase": "^1.142.2",
    "dotenv": "^16.3.1",
    "@simple-bookkeeping/database": "workspace:*"
  },
  "peerDependencies": {
    "@simple-bookkeeping/types": "workspace:*",
    "next": "^14.0.0",
    "react": "^18.0.0"
  }
}
