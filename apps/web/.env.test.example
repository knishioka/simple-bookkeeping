# ============================================
# Playwright E2E Test Environment Variables
# ============================================
# This file contains example environment variables for E2E tests.
# Copy this file to .env.test and fill in your test values.
# NEVER commit .env.test with real credentials to version control.

# ============================================
# Test Credentials
# ============================================
# These override the default dummy credentials in the constants file
# Leave empty to use the default test values

# Admin user credentials for E2E tests
TEST_ADMIN_EMAIL=
TEST_ADMIN_PASSWORD=

# Additional test users (optional)
TEST_USER_EMAIL=
TEST_USER_PASSWORD=
TEST_GUEST_EMAIL=
TEST_GUEST_PASSWORD=

# ============================================
# Supabase Configuration (Test Environment)
# ============================================
# For E2E tests, we use dummy values when not connected to real Supabase
# If you have a test Supabase instance, you can configure it here

NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ============================================
# Test Execution Configuration
# ============================================
# Control test execution behavior

# Test mode: fast | ci | comprehensive | local | prod
TEST_MODE=local

# Enable debug output
DEBUG=false
PWDEBUG=0

# Node environment
NODE_ENV=test

# CI environment flag (set automatically in CI)
CI=false

# ============================================
# Authentication State
# ============================================
# Control authentication state preparation

# Prepare authentication state before tests
PREPARE_AUTH_STATE=false

# Custom path for auth state storage
AUTH_STATE_PATH=e2e/.auth/admin.json

# ============================================
# Server Configuration
# ============================================
# Control test server behavior

# Reuse existing server instead of starting new one
REUSE_SERVER=false

# Use global setup
USE_GLOBAL_SETUP=true

# Web server port
PORT=3000

# Production URL for production testing mode
PROD_URL=https://simple-bookkeeping-mu.vercel.app

# ============================================
# Timeout Configuration
# ============================================
# Adjust timeouts for slow environments

# Enable extended timeouts for slow environments
EXTENDED_TIMEOUTS=false

# Timeout multiplier (default: 1.5)
TIMEOUT_MULTIPLIER=1.5

# ============================================
# Additional Configuration
# ============================================
# Other test-related configuration

# Parallel test execution workers
# Use a number or percentage (e.g., "50%")
TEST_WORKERS=

# Screenshot on failure
SCREENSHOT_ON_FAILURE=true

# Video recording
RECORD_VIDEO=false

# Trace recording
RECORD_TRACE=false
