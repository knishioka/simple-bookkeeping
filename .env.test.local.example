# E2Eテスト用ローカル環境設定
# このファイルを .env.test.local にコピーして使用してください

# ========================================
# Test Database Configuration
# ========================================
# テスト用データベース（本番DBとは別にすることを推奨）
DATABASE_URL="postgresql://bookkeeping:bookkeeping@localhost:5432/simple_bookkeeping_test?schema=public"

# ========================================
# Test API Configuration
# ========================================
API_PORT=3001
NODE_ENV=test

# JWT設定（テスト用の固定値）
JWT_SECRET=test-secret-for-e2e-testing-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=test-refresh-secret-for-e2e-testing-only
JWT_REFRESH_EXPIRES_IN=7d

# CORS設定
CORS_ORIGIN=http://localhost:3000

# ========================================
# Test Frontend Configuration
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# ========================================
# Playwright Configuration
# ========================================
# テスト実行時のタイムアウト設定（ミリ秒）
TEST_TIMEOUT=60000
NAVIGATION_TIMEOUT=30000

# テスト並列実行数（ローカルでは1推奨）
TEST_WORKERS=1

# ========================================
# Test User Credentials
# ========================================
TEST_USER_EMAIL=admin@example.com
TEST_USER_PASSWORD=password123