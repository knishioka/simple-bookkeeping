# Test timeouts
TEST_TIMEOUT=60000
TEST_RETRIES=2
TEST_WORKERS=2

# Debug settings (set to true for verbose output)
DEBUG=false
PWDEBUG=false

# ------------------------------------------
# PLAYWRIGHT CONFIGURATION
# ------------------------------------------

# Base URL for tests (local development server)
BASE_URL=http://localhost:3000
TEST_WEB_URL=http://localhost:3000

# Headless mode (set to false to see browser)
HEADLESS=true

# ------------------------------------------
# DOCKER SPECIFIC SETTINGS
# ------------------------------------------

# Kong API Gateway Port
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

# Inbucket Mail Server Port (for email testing)
INBUCKET_PORT=54324

# PostgreSQL Port (if you want to connect directly)
