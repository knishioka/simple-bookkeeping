# Docker E2E Test Environment Variables
# Issue #201: Centralized test environment configuration
# Copy this file to .env.test and adjust values as needed

# Database Configuration
TEST_DB_USER=test
TEST_DB_PASSWORD=test
TEST_DB_NAME=bookkeeping_test

# API Configuration
TEST_API_PORT=3001
TEST_JWT_SECRET=test-secret-key-for-e2e
TEST_JWT_EXPIRES_IN=1h
TEST_JWT_REFRESH_SECRET=test-refresh-secret-for-e2e
TEST_JWT_REFRESH_EXPIRES_IN=7d

# Web Configuration
TEST_NEXTAUTH_SECRET=test-nextauth-secret-for-e2e

# Test Execution Settings
TEST_RETRIES=2
TEST_WORKERS=2
TEST_TIMEOUT=60000

# Playwright Configuration
PLAYWRIGHT_VERSION=v1.48.0

# Output Directories
TEST_OUTPUT_DIR=./test-results
PLAYWRIGHT_REPORT_DIR=./playwright-report
COVERAGE_DIR=./coverage
ARTIFACTS_DIR=./artifacts

# Debug Settings (set to true/1 to enable)
DEBUG=
VERBOSE=
PWDEBUG=
TEST_LOG_LEVEL=info

# CI/CD Settings
CI=false
NODE_ENV=test

# Feature Flags
USE_GLOBAL_SETUP=true
REUSE_SERVER=false
